#!/usr/bin/ruby

require 'xml2json'

xml = ARGV[0]

#xml = ARGV.first or raise ArgumentError, "Please specify a XML file to parse."

begin
  if xml == '-'
    xdata = ARGF.read.chomp
    puts XML2JSON.parse(xdata)
  else
    puts XML2JSON.parse(File.read(xml).chomp)
  end
rescue => e
  $stderr.puts 'Unable to comply: %s' % [e.message]
end

